.page-header
  %h1
    -if @swear_word.new_record?
      New Swear Word
    -else
      Editing #{@swear_word.word}

=form_for [:admin,@swear_word], html:{class:"form-horizontal"} do |f|
  =f.bs_text_field :word, label_name: "Naughty Word"
  =f.bs_text_field :mask, label_name: "Replacement"
  =f.bs_collection_radio_buttons :case_sensitive, [[false, "Case doesn't matter."],[true,"Case Sensitive"]], :first, :last
  =f.bs_collection_radio_buttons :require_beginning_space, [[true, "Yes"],[false,"No"]], :first, :last, label_name: "Require a space before the swear word."
  =f.bs_collection_radio_buttons :require_ending_space, [[true, "Yes"],[false,"No"]], :first, :last, label_name: "Require a space after the swear word. (Leave off for word roots, etc.)"
  =f.bs_submit
