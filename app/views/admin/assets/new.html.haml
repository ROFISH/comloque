.page-header
  %h1 New Asset

=form_for [:admin,@theme,@asset], remote: !@asset.new_record?, html:{class:"form-horizontal"} do |f|
  =f.bs_text_field :key
  =f.bs_ace_field :source, style:"min-height:300px;", mode:'liquid'
  =f.bs_submit

  :javascript
    $(document).on("ajax:success","##{f.options[:html][:id]}",function(e, data, status, xhr){
      $("#alert-saved").fadeIn(100);
      setTimeout(function(){$("#alert-saved").fadeOut();},1000)
    })
