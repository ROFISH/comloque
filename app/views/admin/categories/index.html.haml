.page-header
  %h1 Categories

%p
  =link_to "New Category", new_admin_category_path, class:"btn btn-primary"

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Actions
  %tbody
    -@categories.each do |category|
      %tr
        %td=link_to category.name, [:admin,category]
        %td
          =link_to "Edit",[:edit,:admin,category], class:'btn btn-sm btn-success'
          =link_to "Destroy",[:admin,category], :class=>'btn btn-sm btn-danger', "data-confirm"=>"Are you sure?", "data-method"=>"delete"
