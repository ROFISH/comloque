.page-header
  %h1 Forums

%p
  =link_to "New Forum", new_admin_forum_path, class:"btn btn-primary"
  =link_to "Edit Categories", admin_categories_path, class:"btn btn-info"
  =link_to "Edit Users", admin_users_path, class:"btn btn-success"
  =link_to "Edit Emoji", admin_emojis_path, class:"btn btn-warning"
  =link_to "Edit Swear Words", admin_swear_words_path, class:"btn btn-danger"

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Actions
  %tbody
    -@forums.each do |forum|
      %tr
        %td=link_to forum.name, [:admin,forum]
        %td
          =link_to "Edit",[:edit,:admin,forum], class:'btn btn-sm btn-success'
          =link_to "Destroy",[:admin,forum], :class=>'btn btn-sm btn-danger', "data-confirm"=>"Are you sure?", "data-method"=>"delete"
