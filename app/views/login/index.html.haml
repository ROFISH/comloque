.page-header
  %h1 Login

=form_tag nil,method:"GET",class:"form-horizontal" do
  .form-group
    =label_tag :email,'Email',class:"col-sm-2 control-label"
    .col-sm-7.col-md-5
      =text_field_tag :email, '', class:'form-control'
  .form-group
    .col-sm-offset-2.col-sm-7.col-md-5
      =submit_tag 'Submit', class:'btn btn-primary'
